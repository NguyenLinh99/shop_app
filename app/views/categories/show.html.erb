<!-- BREADCRUMB -->
<div id="breadcrumb">
  <div class="container">
    <ul class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li class="active">Products</li>
    </ul>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <div id="aside" class="col-md-3">
        <div class="aside">
          <h3 class="aside-title"><%= @category.name %></h3>
          <ul class="list-links">
            <% @products.each do |product| %>
              <li><%= link_to product.name, product_path(product.id) %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div id="main" class="col-md-9">
        <!-- store top filter -->
        <div class="store-filter clearfix">
          <div class="pull-left">

          </div>
          <div class="pull-right">
            <span class="text-uppercase">Show:</span>
            <div class="page-filter">
              <%= search_form_for @q, url: category_path(@category) do |f|%>
                <%= select_tag :limit, options_from_collection_for_select(Settings.show_limit, :second, :second, selected: params[:limit] || Settings.show_limit.limit),id: "show-limit",class: "input" %>
                <%= f.submit "search", class: "btn btn-info", style: "display: none; margin-right: 10px"%>
              <% end %>
            </div>
            <ul class="store-pages">
               <li><span class="text-uppercase">Page:</span></li>
               <%= paginate @products %>
            </ul>
          </div>
        </div>

        <div id="store">
          <div class="row">
            <% @products.each do |product| %>
            <!-- Product Single -->
              <div class="col-md-4 col-sm-6 col-xs-6">
                <div class="product product-single">
                  <div class="product-thumb">
                    <div class="product-label">
                      <span>New</span>
                      <span class="sale">-20%</span>
                    </div>
                    <%= image_tag product.images.first.image_url.url unless product.images.empty? %>
                  </div>
                  <div class="product-body">
                    <h3 class="product-price"><%= product.price %></h3>
                    <div class="product-rating">
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star-o empty"></i>
                    </div>
                    <h2 class="product-name"><%= link_to (product.name.truncate(20)), product_path(product.id) %></h2>
                    <% if current_user %>
                      <div class="product-btns">
                        <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                        <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                        <%= button_to 'Add to Cart', order_items_path(:product_id => product), :remote => true, class: "primary-btn add-to-cart" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
