<div class="section">
  <div class="container">
    <div class="row">
      <div id="aside" class="col-md-3">
        <div class="aside">
          <h3 class="aside-title">Dashboard</h3>
          <ul class="list-links">
            <li class="active"><%= link_to "Categories", admin_categories_path %></li>
            <li><%= link_to "Products", admin_products_path %></li>
          </ul>
        </div>
      </div>

      <div id="main" class="col-md-9">
        <table>
          <thead>
            <tr>
              <td>ID</td>
              <td> NAME</td>
              <td><%= link_to "New", new_admin_category_path %></td>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td><%= link_to "Edit", edit_admin_category_path(category) %></td>

                <td><%= link_to "Delete", admin_category_path(category), method: "delete", data: { confirm: 'Are you sure?'} %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
