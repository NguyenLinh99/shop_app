<div class="container-fluid">
  <div class="row">
    <div class="nav-dashboard col-md-2">
      <ul class="nav nav-pills nav-stacked">
        <li class="list-nav">NAVIGATION</li>
        <li class="active"><%= link_to "Categories", admin_categories_path %></li>
        <li><%= link_to "Products", admin_products_path %></li>
      </ul>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
      <div class="content">
        <div class="ad-head-title">
          <h1>List of Categories</h1>
        </div>

        <div id="breadcrumb" class="bread-admin">
          <ul class="breadcrumb">
            <li><%= link_to "Dashboard", admin_path %></li>
            <li><%= link_to "Categories", admin_categories_path %></li>
          </ul>
        </div>

        <ul class="nav nav-tabs">
          <li class="active"><%= link_to '<i class="fa fa-list"></i> List'.html_safe, admin_categories_path %></li>
          <li><%= link_to '<i class="fa fa-plus"></i> Add new'.html_safe, new_admin_category_path %></li>
        </ul>

        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>NAME</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td>
                  <ul class="inline list-inline">
                    <li><%= link_to fa_icon("eye"), admin_category_path(category) %></li>
                    <li><%= link_to fa_icon("edit"), edit_admin_category_path(category) %></li>
                    <li><%= link_to fa_icon("trash"), [:admin, category], method: :delete, data: { confirm: 'Are you sure?'} %></li>
                  </ul>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
