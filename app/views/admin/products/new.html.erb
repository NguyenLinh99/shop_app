<h3>Create a Product</h3>
<%= form_for [:admin, @product] do |f| %>
  <p>Choose Category: <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "name"), include_blank: true %></p>
  <p>Enter Product's Name: <%= f.text_field :name, placeholder: "name" %></p>
  <p>Enter Product's Price: <%= f.text_field :price %></p>
  <%= f.submit %>
<% end %>
