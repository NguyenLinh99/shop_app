<div class="container-fluid">
  <div class="row">
    <div class="nav-dashboard col-md-2">
      <ul class="nav nav-pills nav-stacked">
        <li class="list-nav">NAVIGATION</li>
        <li><%= link_to "Categories", admin_categories_path %></li>
        <li class="active"><%= link_to "Products", admin_products_path %></li>
      </ul>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
      <div class="content">
        <div class="ad-head-title">
          <h1>Edit Product</h1>
        </div>

        <div id="breadcrumb" class="bread-admin">
          <ul class="breadcrumb">
            <li><%= link_to "Dashboard", admin_path %></li>
            <li><%= link_to "Products", admin_products_path %></li>
            <li><%= link_to "Product #{@product.id}", admin_product_path(@product) %></li>
            <li>Edit</li>
          </ul>
        </div>

        <ul class="nav nav-tabs">
          <li><%= link_to '<i class="fa fa-eye"></i> Show'.html_safe, admin_product_path(@product) %></li>
          <li class="active"><%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_admin_product_path(@product) %></li>
          <li><%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, [:admin, @product], method: :delete, data: { confirm: 'Are you sure?'} %></li>
        </ul>

        <%= form_for([:admin, @product], html: {multipart: true}) do |f| %>
          <div class="col-md-5" style="margin-bottom:20px">
            <div class="form-group">
              <label class="col-sm-2 col-form-label"><b>Code</b></label>
              <%= f.text_field :code, required: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-form-label"><b>Name</b></label>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-form-label"><b>Price</b></label>
              <%= f.text_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-form-label"><b>Description</b></label>
              <%= f.text_area :description, class: "form-control" %>
            </div>
            <div class="form-group add-img">
              <%= link_to_add_association 'Add Image', f, :images, class: "btn btn-warning" %>
              <div class="image-form">
                <%= f.fields_for :images do |img| %>
                  <%= render "image_fields", f: img %>
                <% end %>
              </div>
            </div>
            <div class="form-actions">
              <%= f.submit "Save Product", class: "btn btn-primary" %>
              <%= link_to "Back Product's Page", admin_products_path(), class: "btn btn-info" %>
            </div>
          </div>
          <br><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
