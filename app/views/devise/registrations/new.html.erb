<div class="section">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-md-8">
          <h1>Sign up</h1>
          <hr><br>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
            <%= render "devise/shared/error_messages", resource: resource %>
        </div>
      </div>

      <div class="row form-singup">
        <div class ="col-md-3">
          <div class="field field-avatar">
            <%= image_tag "avatar.png", id: "img_prev", class: "img-thumbnail" %>
            <br/>
            <span class="form-control" id="form-hide">
              <%= f.file_field :avatar, id: "avatar-upload" %>
            </span>
            <%= f.hidden_field :avatar_cache %>
          </div>
        </div>

        <div class="col-md-5">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <br>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <br>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <br>

          <div class="btn-action">
            <%= f.submit "Sign up", class: 'btn-login' %>
            <%= link_to "Sign in", new_session_path(resource_name), class: "btn-signup" %>
          </div>
          <br>
          <br>
          <br>
        </div>
      </div>
    <% end %>
  </div>
</div>
