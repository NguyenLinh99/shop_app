<div class="section">
  <div class="container">
    <div class="row form-sign">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1>Sign in</h1>
        <hr><br>

        <% flash.each do |name, msg| %>
          <div class="alert alert-error"><%= msg %></div>
        <% end %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
        <br>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <br>

        <% if devise_mapping.rememberable? -%>
            <div>
              <%= f.check_box :remember_me, class: 'col-md-1', style: 'width: 14px; height: 14px;' %>
              <%= f.label :remember_me, class: 'col-md-10', style: 'bottom: 2px;' %>
            </div>
        <% end -%>
        <br>
        <br>

        <div class="btn-action">
          <%= f.submit "Sign in", class: 'btn-login' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-signup" %>
        </div>
        <br>
        <br>
        <br>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn-pw" %>
        <br>
        <br>
      <% end %>
    </div>
  </div>
</div>
